# Social Media Pipeline - Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

APP_NAME=Social Media Pipeline POC
APP_VERSION=1.0.0

# ============================================
# Twitter API Configuration
# ============================================
# Get your Bearer Token from: https://developer.twitter.com/en/portal/dashboard
# Free tier includes: 500,000 tweets/month
TWITTER_BEARER_TOKEN=

# Optional: OAuth 1.0a credentials (not required for POC)
TWITTER_API_KEY=
TWITTER_API_SECRET=

# ============================================
# Database Configuration
# ============================================
# SQLite (default for POC - no setup required)
DATABASE_URL=sqlite+aiosqlite:///./social_media.db
DB_ECHO=False

# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/social_media

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# For Redis Cloud (free tier):
# REDIS_HOST=redis-12345.c1.us-east-1-1.ec2.cloud.redislabs.com
# REDIS_PORT=12345
# REDIS_PASSWORD=your_password

# ============================================
# Celery Configuration
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# Security Settings
# ============================================
# IMPORTANT: Change this to a strong random value in production!
# Generate with: openssl rand -hex 32
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================
# CORS Settings
# ============================================
# Add your frontend URLs here
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:8000"]

# ============================================
# API Settings
# ============================================
API_V1_PREFIX=/api/v1
API_RATE_LIMIT=100/minute

# ============================================
# Twitter API Rate Limits (Free Tier)
# ============================================
TWITTER_REQUESTS_PER_15MIN=180
TWITTER_SEARCH_REQUESTS_PER_15MIN=450
TWITTER_MAX_RESULTS_PER_REQUEST=10

# ============================================
# Cache Settings
# ============================================
# Time-to-live in seconds
CACHE_TTL_SHORT=60
CACHE_TTL_MEDIUM=300
CACHE_TTL_LONG=3600

# ============================================
# Background Task Intervals (seconds)
# ============================================
TASK_FETCH_TWEETS_INTERVAL=900
TASK_ANALYZE_SENTIMENT_INTERVAL=300
TASK_AGGREGATE_DATA_INTERVAL=3600

# ============================================
# Data Retention
# ============================================
DATA_RETENTION_DAYS=30

# ============================================
# Sentiment Analysis Settings
# ============================================
SENTIMENT_POSITIVE_THRESHOLD=0.1
SENTIMENT_NEGATIVE_THRESHOLD=-0.1

